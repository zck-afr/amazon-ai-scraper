{
  "manifest_version": 3,
  "name": "Amazon AI Scraper",
  "description": "Extract Amazon products for AI analysis in 1 click",
  "version": "1.0.0",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "host_permissions": ["*://*.amazon.fr/*"],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Amazon AI Scraper"
  },

  "content_scripts": [
    {
      "matches": ["*://*.amazon.fr/*/dp/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}